# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@host/threadbeef?sslmode=require

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Claude API (content pipeline)
ANTHROPIC_API_KEY=sk-ant-xxx

# App
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# ── Pipeline ──────────────────────────────────
# Reddit API (PRAW) — for content pipeline
REDDIT_CLIENT_ID=your-client-id
REDDIT_CLIENT_SECRET=your-client-secret
REDDIT_USER_AGENT=threadbeef-scraper/1.0

# LLM Provider: "claude" or "openai"
LLM_PROVIDER=claude

# OpenAI API (alternative LLM provider)
OPENAI_API_KEY=sk-xxx

# YouTube Data API v3
YOUTUBE_API_KEY=your-api-key
